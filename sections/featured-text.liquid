{{ 'section-featured-text.css' | asset_url | stylesheet_tag }}
<h2>{{ section.settings.section_title | escape }}</h2>
{{ section.settings.text }}

{% schema %}
{
  "name": "Featured Text",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "Featured Text",
      "category": "Text"
    }
  ]
}
{% endschema %}

<div class="section-container">
    <div>
        <h2 class="featured-text-title">Nice Weather = Nice Deals!</h2>
    </div>
    <div class="sale-container">
        <div class="sale-tag">
            <h3>30% Plants</h3>
        </div>
        <div class="sale-tag">
            <h3>10% Accessories</h3>
        </div>
    </div>
</div>